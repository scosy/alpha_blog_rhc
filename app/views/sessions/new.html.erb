<h1 align="center">Se connecter</h1>

<div class="row center">
  <div class="col-sm-offset-2">
    <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
    <div class="form-group">
      <div class="col-sm-2 control-label">
        <%= f.label :email %> <br>
      </div>
      <div class="col-sm-6">
        <%= f.text_field :email, rows: 10, class: "form-control", placeholder: "Entrez votre email" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-2 control-label">
        <%= f.label :password %> <br>
      </div>
      <div class="col-sm-6">
        <%= f.password_field :password, rows: 10, class: "form-control", placeholder: "Entrez votre mot de passe", autocomplete: "off" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-10">
        <%= f.submit "Se connecter", class: "btn btn-default" %>
      </div>
    </div>

    <% end %>
  </div>  
</div>