<h1 align="center">Créer nouvel utilisateur</h1>

<%= render "shared/errors", obj: @user %>

<div class="row">
  <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group">
    <div class="col-sm-2 control-label">
      <%= f.label :username %> <br>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :username, class: "form-control", placeholder: "Entrez votre nom d'utilisateur" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-2 control-label">
      <%= f.label :email %> <br>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :email, rows: 10, class: "form-control", placeholder: "Entrez votre email" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-2 control-label">
      <%= f.label :password %> <br>
    </div>
    <div class="col-sm-8">
      <%= f.password_field :password, rows: 10, class: "form-control", placeholder: "Entrez votre mot de passe" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "S'inscrire", class: "btn btn-default" %>
    </div>
  </div>

  <% end %>
</div>

<div class="col-sm-offset-2">
  <%= link_to "Retour à la liste", articles_path %>
</div>